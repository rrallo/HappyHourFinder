!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Myapp"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href=>'http://fonts.googleapis.com/css?family=Droid+Sans', :rel=>'stylesheet', :type=>'text/css'}
    %link{:href=>'http://fonts.googleapis.com/css?family=Asap', :rel=>'stylesheet', :type=>'text/css'}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body
    %header.header-container
      .container-fluid
        .row-fluid
          .span12
            .header
              = content_tag(:a, :href => root_path) do
                = image_tag("drinks.png", {:class => "logo"})
                .title-container
                  %h1.site-title BarRater
                  %h1.tagline find the best happy hours in SD
              %nav.header-nav= render 'layouts/navigation'
              .search
                = form_tag restaurants_path, :method => 'get', :class => 'navbar-search pull-right' do
                  = text_field_tag :search, params[:search], :id => 'search_query', :placeholder => 'search bars & restaurants'
    .mock-bar
    #main{:role => "main"}
      .container-fluid
        .row-fluid
          .span12
            = yield
    %footer


